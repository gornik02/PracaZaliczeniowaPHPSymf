{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner"  style="height: 500px">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://wallpaperaccess.com/full/31189.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="http://s1.picswalls.com/wallpapers/2017/12/11/nature-photos-hd_123027600_313.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://i.pinimg.com/originals/91/b5/cd/91b5cdab51e207263169904b227503b4.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="bg-warning pt-2 pb-1">
    <div class="container">
        <div class="d-flex">
            <h3 class="mr-auto p-2">Subscribe To Our Newsletter</h3>
            {{form_start(form)}}
            <div class="row p-2">
                <div class="col-xs-6">
                    <div class="md-form mb-0">
                        {{ form_row(form.email, {'label':false}) }}
                    </div>
                </div>
                <div class="col-xs-6 ml-5">
                    <div class="md-form mb-0">
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
