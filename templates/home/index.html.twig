{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<section class="mb-4">
    <div class="jumbotron">
        <h2 class="h1-responsive font-weight-bold text-center my-4">Join us</h2>
        <hr class="my-6">
            <div class="row">
                <div class="col-md-9 mb-md-0 mb-5">
                    {{form_start(form)}}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="text-center text-md-left text-white">
                        {{ form_row(form.add) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </hr>
    </div>
</section>
    {{form_start(form)}}
    {{form(form)}}
    {{form_end(form)}}
{% endblock %}